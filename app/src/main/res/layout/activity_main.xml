<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:scaleType="centerCrop" />

    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- 50% black opacity -->

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- Header with logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/lexxy1"
                android:contentDescription="Lexxy Pastry Logo"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside" />

            <!-- Welcome title -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Lexxy Pastry"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="10dp" />

            <!-- Tagline -->
            <TextView
                android:id="@+id/taglineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freshly Baked Happiness Every Day"
                android:textSize="16sp"
                android:textColor="#FFE4E1"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Divider line -->
            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="#FFFFFF" />

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/signin"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="18sp"
                    android:backgroundTint="#C84E4E"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="18sp"
                    android:backgroundTint="#BA5A5A"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:id="@+id/btnAbout"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textSize="18sp"
                    android:backgroundTint="#D46A6A"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="15dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

